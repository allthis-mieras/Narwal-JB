---
import { getDocumentPreview } from "../utils/sanity"; // Stel dit correct in

const { searchParams } = Astro.request;
const documentId = searchParams.get("page");

const data = await getDocumentPreview(documentId); // Haalt de preview-inhoud op
---

<html>
  <head>
    <title>{data.title || "Preview"}</title>
  </head>
  <body>
    <h1>{data.title}</h1>
    <p>{data.content}</p>
    <!-- Render de rest van de content hier -->
  </body>
</html>
