    & .footer__bottom {
      display: flex;
      justify-content: space-between;
      padding: var(--space-s) 0;
      font-size: 12px;
      & .footer__year {
        font-size: inherit;
      }
      & .footer__text {
        font-size: var(--fontsize-1);
        line-height: var(--line-height-1);
        display: flex;
        align-items: center;
