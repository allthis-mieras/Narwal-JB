---
import { Image } from "astro:assets";
import { urlFor } from "../utils/image";

interface Button {
  url: string;
  label: string;
}

interface Props {
  text: string;
  button: Button;
  image: any;
}

const { text, button, image }: Props = Astro.props;
const imageUrl = urlFor(image.asset.url ?? {}).url();
// console.log("Highlight image:", image.asset.url);
console.log("text", text, "button", button, "image", image);
---

<section class="feature">
  <div class="feature__inner container stretch">
    <p>{text}</p>
    <a href={button.url} class="button">{button.label}</a>
  </div>

  {
    image.asset.url && (
      <Image
        src={imageUrl}
        inferSize
        widths={[480, 960, 1440, 1920, 2560]}
        sizes="(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1080px) 720px, 1080px"
        alt="Jacques Buith"
        class="feature__image"
      />
    )
  }
</section>

<style>
  .feature {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: flex-start;

    height: 100vh;
    overflow: hidden;
  }

  .feature__inner {
    position: absolute;
    inset: 0;
    padding: var(--gap-default);
    z-index: 10;
    color: black;
    text-align: left;
  }

  .feature__inner p {
    font-size: var(--fontsize-4);
    font-weight: 100;
    line-height: 112.5%;
    text-wrap:;
    margin-bottom: 1rem;
  }

  .feature__inner .button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: rgba(255, 255, 255, 0.8); /* Lichtblauwe achtergrond */
    color: black;
    text-decoration: none;
    border-radius: 2rem;
    font-size: 1rem;
    font-weight: 600;
    transition: background-color 0.3s;
    border: none;
  }

  .feature__inner .button:hover {
    background-color: rgba(
      255,
      255,
      255,
      1
    ); /* Iets donkerdere achtergrond op hover */
  }

  .feature__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }

  @media (max-width: 768px) {
    .feature__inner p {
      font-size: 2rem;
    }

    .feature__inner .button {
      font-size: 0.875rem;
      padding: 0.5rem 1rem;
    }
  }
</style>
