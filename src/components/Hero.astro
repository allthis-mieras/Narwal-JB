---
import SwiperJSComponent from "./SwiperJSComponent.jsx";
import type { Slide } from "../utils/sanity";

interface Props {
  heroText: string;
  slides: Slide[];
}

const { heroText, slides } = Astro.props;
---

<section class="hero">
  <div class="hero-text">
    <h1>{heroText}</h1>
  </div>

  <SwiperJSComponent slides={slides} />
</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: 80vh; /* Pas de hoogte van de carousel aan naar wens */
    min-height: 30rem;
    overflow: hidden;
    background: black;
  }

  .hero-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
    color: white;
    text-align: center;
    font-size: 2rem;
    padding: 1rem;
  }
  :global(.swiper) {
    width: 100%;
    height: 100%;
  }

  :global(.swiper-slide) {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 18px;
    background: #fff;
  }

  :global(.slide-image) {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
</style>
