---
import { Swiper, SwiperSlide } from "swiper/react";
// import 'swiper/swiper-bundle.min.css'; // Zorg ervoor dat je Swiper's CSS importeert

const { heroText, slides } = Astro.props;
---

<section class="hero">
  <div class="hero-text">
    <h1>{heroText}</h1>
  </div>

  <Swiper
    spaceBetween={0}
    slidesPerView={1}
    loop={true}
    pagination={{ clickable: true }}
    autoplay={{ delay: 5000 }}
  >
    {
      slides.map((slide, index) => (
        <SwiperSlide key={index}>
          <img
            src={slide.asset.url}
            alt={`Slide ${index + 1}`}
            class="slide-image"
          />
        </SwiperSlide>
      ))
    }
  </Swiper>
</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: 400px; /* Pas de hoogte van de carousel aan naar wens */
    overflow: hidden;
  }

  .hero-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
    color: white;
    text-align: center;
    font-size: 2rem; /* Pas de tekstgrootte aan naar wens */
  }
</style>
