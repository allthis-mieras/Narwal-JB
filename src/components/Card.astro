---
import { formatDate } from "../utils";
import { urlFor } from "../utils/image";
import type { Post } from "../utils/sanity";

interface Props {
  post: Post;
}

const { post } = Astro.props;

function extractDomain(url: string) {
  const urlObject = new URL(url);
  return urlObject.hostname;
}

const domain = post.url ? extractDomain(post.url) : "";
---

<div class="card">
  <div class="card__container">
    <div class="card__top">
      <p class="card__cat">{post.category}</p>
      <h3 class="card__title">
        <a class="card__link" href={`/post/${post.slug.current}`}>
          {post.title}
        </a>
      </h3>
    </div>
    <div class="card__bottom">
      <p class="card__excerpt">{post.excerpt}</p>
      <div class="card__footer">
        <div class="source">
          {
            post.url && (
              <a href={post.url} class="card__url" target="_blank">
                {domain}
              </a>
            )
          }
        </div>
        <p class="card__date">
          {formatDate(post._createdAt)}
        </p>
      </div>
    </div>
  </div>
  <!-- <div class="card__media">
    {
      post.mainImage ? (
        <img
          class="card__cover"
          src={urlFor(post.mainImage as any)
            .width(500)
            .height(300)
            .url()}
          alt="Cover image"
        />
      ) : (
        <div class="card__cover--none" />
      )
    }
  </div> -->
</div>

<style>
  .card {
    display: flex;
    flex-direction: row;
    padding: var(--space-2);
    padding: 1rem;
    position: relative;
    /* border-bottom: 1px solid #ced2d9; */
    min-height: 400px;
    border-radius: 1rem;
    overflow: hidden;
    transition:
      transform 0.2s,
      opacity 0.2s;

    &:active {
      transform: scale(0.99);
      opacity: 0.4;
    }

    & .card__media {
      display: none;
      z-index: 4;

      &::after {
        /* content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(#d2d6da96, #d2d6da);
        backdrop-filter: blur(0rem);
        z-index: 0; */
      }

      &:hover::after {
        /* backdrop-filter: blur(2rem); */
        background-color: red;
      }
    }

    & .card__container {
      margin: 0 var(--space-1) 0;

      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    & .card__cover {
      position: absolute;
      height: 100%;
      width: 100%;
      top: 0;
      left: 0;
      object-fit: cover;
      z-index: -1;
      transform: scale(1.1);
    }

    & .card__cover--none {
      display: none;
      background: var(--black);
    }

    & .card__top {
      z-index: 10;
    }

    & .card__cat {
      font-size: var(--font-size-1);
      z-index: 10;
      pointer-events: none;
    }

    & .card__cat {
      color: rgba(0, 0, 0, 0.2);
    }

    & .card__title {
      font-family: var(--font-family-sans);
      font-weight: 300;
      font-size: var(--font-size-6);
      line-height: var(--line-height-6);
      letter-spacing: -0.025em;
      margin: var(--space-3) 0;
    }

    & .card__excerpt {
      font-family: var(--font-family-sans);
      font-weight: 400;
      font-size: var(--font-size-1);
      line-height: var(--line-height-1);
      margin-top: 0;

      /* truncate */
      display: -webkit-box;
      line-clamp: 2;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    & .card__bottom {
      z-index: 10;
      pointer-events: none;
    }

    & .card__footer {
      display: flex;
      justify-content: space-between;
      z-index: 10;
      align-items: baseline;
      margin-top: var(--space-4);
      pointer-events: inherit;

      & .card__date {
        font-weight: 400;
        font-family: var(--font-family-sans);
        font-size: var(--font-size-0);
        margin-top: calc(var(----space-4) + 7);
      }

      & .card__url {
        padding: 0.5rem 0.875rem;
        color: var(--black);
        text-decoration: none;
        border-radius: 100vw;
        z-index: 10;
        background-color: yellow;
        pointer-events: all;
        font-size: var(--font-size-0);

        &:hover {
          opacity: 0.8;
          transition: 0.2s;
        }
      }
    }

    & .card__link {
      color: var(--black);
      text-decoration: none;
      /* transition: all 0.5s ease-in-out; */

      /* &:hover {
        opacity: 0.8;
      } */

      &::before {
        content: "";
        position: absolute;
        inset: 0;
        z-index: -1;
        background: linear-gradient(180deg, #d2d6da, #c2cad1);
        transition: all 2.2s cubic-bezier(0, 0.55, 0.45, 1);
        backdrop-filter: blur(0rem);
        opacity: 0.5;
      }

      &:hover::before {
        background: linear-gradient(180deg, #d2d6da, #c2cad1);
        backdrop-filter: blur(0rem);
        opacity: 0.95;
      }
    }

    /* &:first-child {
        border-top-left-radius: 3px;
        border-top-right-radius: 3px;
      }

      &:last-child {
        border-bottom-left-radius: 3px;
        border-bottom-right-radius: 3px;
      } */
  }

  @media (min-width: 575px) {
    .card {
      /* border: 1px solid #ced2d9; */
      border-bottom: none;

      & .card__title {
        margin-top: var(--space-4);
      }

      &:last-child {
        /* border-bottom: 1px solid #ced2d9; */
      }
    }
  }

  @media (min-width: 800px) {
    .card {
      flex-direction: row;

      & .card__container {
        margin: 0 var(--space-2) 0;
      }

      & .card__cover,
      & .card__cover--none {
        width: 100%;
        height: 100%;
      }
    }
  }
</style>
